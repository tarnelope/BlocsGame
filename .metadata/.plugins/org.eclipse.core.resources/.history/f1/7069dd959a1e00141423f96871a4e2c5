package Tetrominos;

import java.util.ArrayList;

import com.bloc.blocs.TetrisBoard;
import com.bloc.blocs.Tile;

public class SquarePiece extends Tetromino {

	public SquarePiece(int x, int y, int numTilesWide, int numTilesTall,
			boolean orientation) {
		super(x, y, numTilesWide, numTilesTall, orientation);
		// TODO Auto-generated constructor stub
	}
	
	@Override
	protected void drawSprite() {
		tiles = new ArrayList<Tile>();

		Tile t = new Tile(START_ROW, START_COL);
		tiles.add(t);
		Tile t2 = new Tile(1, 0);
		tiles.add(t2);
		Tile t3 = new Tile(1, 1);
		tiles.add(t3);
		Tile t4 = new Tile(0, 1);
		tiles.add(t4);
		//Log.d("LogPiece", "end of drawLogSprite(). s childCount is "+s.getChildCount());
	}

	@Override
	protected float getOrigHeight() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	protected float getOrigWidth() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	protected void rotate() {
		s.setRotationCenter(TetrisBoard.TILE_DIMEN, TetrisBoard.TILE_DIMEN);
		s.setRotation(s.getRotation()+90);
	}

}
