import org.andengine.opengl.vbo.VertexBufferObjectManager;

public class SplashScene extends Scene {

	Blocs activity;
	
	public SplashScene() {
		setBackground(new Background(0.09804f, 0.6274f, 0));
		activity = Blocs.getSharedInstance();
		
		Text title1 = new Text(5, 5, activity.mFont, "Score: 0", "Score: XXXX".length(), this.getVertexBufferObjectManager());
				//new Text(0, 0, activity.getString(R.string.title_1), activity.getVertexBufferObjectManager());
		Text title2 = new Text(0, 0, activity.m, activity.getString(R.string.title_2), activity.getVertexBufferObjectManager()); 
	}
}
