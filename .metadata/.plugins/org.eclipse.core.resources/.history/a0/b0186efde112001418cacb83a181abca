package com.bloc.blocs;

import org.andengine.entity.scene.background.Background;
import org.andengine.entity.scene.menu.MenuScene;
import org.andengine.entity.scene.menu.MenuScene.IOnMenuItemClickListener;
import org.andengine.entity.scene.menu.item.IMenuItem;
import org.andengine.entity.scene.menu.item.TextMenuItem;

import android.util.Log;

public class HomeScene extends MenuScene implements IOnMenuItemClickListener{
	
	Blocs blocs;
	final int PLAY_BTN = 0; //flag for our Start button
	final int ACHIEVE_BTN = 1;
	final int HIGHSCORE_BTN = 2;
	
	public HomeScene() {
		super(Blocs.getSharedInstance().mCamera);
		blocs = Blocs.getSharedInstance();
		setBackground(new Background(0.3432f, 0.9845f, 0.474f));
		
		IMenuItem playBtn = new TextMenuItem(PLAY_BTN, blocs.mFont, blocs.getString(R.string.play), blocs.getVertexBufferObjectManager());
		playBtn.setPosition(mCamera.getWidth()/2-playBtn.getWidth()/2, mCamera.getHeight()*2/3+playBtn.getWidth()*3/2);
		addMenuItem(playBtn);
		
		IMenuItem highScoreBtn = new TextMenuItem(HIGHSCORE_BTN, blocs.mFont, blocs.getString(R.string.hi_score), blocs.getVertexBufferObjectManager());
		highScoreBtn.setPosition(mCamera.getWidth()/2-highScoreBtn.getWidth()/2, mCamera.getHeight()*2/3 - highScoreBtn.getHeight()/2);
		addMenuItem(highScoreBtn);
		
		IMenuItem achieveBtn = new TextMenuItem(ACHIEVE_BTN, blocs.mFont, blocs.getString(R.string.leader_board), blocs.getVertexBufferObjectManager());
		achieveBtn.setPosition(mCamera.getWidth()/2-achieveBtn.getWidth()/2, mCamera.getHeight()*2/3 + highScoreBtn.getHeight());
		addMenuItem(achieveBtn);
		
		setOnMenuItemClickListener(this);
	}

	@Override
	public boolean onMenuItemClicked(MenuScene pMenuScene, IMenuItem pMenuItem,
			float pMenuItemLocalX, float pMenuItemLocalY) {
		switch (pMenuItem.getID()) {
			case PLAY_BTN:
				Log.d("HomeScene", "PLAY_BTN");
				return true;
			case HIGHSCORE_BTN:
				Log.d("HomeScene", "HIGHSCORE_BTN");
				return true;
			case ACHIEVE_BTN:
				Log.d("HomeScene", "ACHIEVE_BTN");
				return true;
			default:
				Log.d("HomeScene", "default");
		}
		return false;
	}

}
